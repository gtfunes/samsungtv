{
  "name": "samsungtv",
  "version": "0.1.0",
  "description": "Node.JS module to control newer models of Samsung Smart TVs (2016 and up)",
  "main": "./build/device.js",
  "exports": {
    "require": "./build/device.js",
    "import": "./lib/device.mjs"
  },
  "scripts": {
    "build": "babel ./lib --out-dir ./build",
    "clean": "(rm -r ./build 2>/dev/null || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules 2>/dev/null || true)",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "npm run clean && npm run build",
    "test": "node test/test.mjs"
  },
  "keywords": [
    "samsung",
    "remote",
    "control",
    "TV",
    "smart",
    "smarttv",
    "iot"
  ],
  "author": "Christian Bromann <mail@christian-bromann.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "7.16.7",
    "appium-support": "2.55.0",
    "node-ssdp": "4.0.1",
    "wake_on_lan": "1.0.0",
    "ws": "8.4.2"
  },
  "devDependencies": {
    "@babel/cli": "7.16.8",
    "@babel/core": "7.16.12",
    "@babel/eslint-parser": "7.16.5",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "babel-plugin-module-extension": "0.1.3",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "prettier": "2.5.1"
  }
}
